%div.wrapper
  %h3 Send request
  %div.row
  = form_for(:request, url: {controller: 'request', action: 'create'}, :html => { :id => 'send_request' }) do |r| 
    %div.form_field.mb-3
      = r.hidden_field :training_id, value: @course.id

      %div.mb-3
        %label{:class => 'form-label', :for => 'client_name' }  Client Name
        = r.text_field :client_name, id: 'client_name', class: 'form-control', placeholder: 'Client name' 

      %div.form_submit
        = r.submit 'Save', class: 'btn btn-secondary'
  %div{ :id => 'result', :class => 'hidden' }
    %h3 Запрос отправлен. Спасибо!

= javascript_pack_tag 'request'